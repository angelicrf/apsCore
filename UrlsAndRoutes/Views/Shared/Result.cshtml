@model UrlsAndRoutes.Models.Result
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Routing</title>
    <link rel="stylesheet" asp-href-include="~/lib/bootstrap/dist/css/*.min.css" />
</head>
<body class="m-1 p-1">
    <h3 class="btn-info">Angelique Url-Routes</h3>
    <table class="table table-bordered table-striped table-sm">
        <tr><th>Controller:</th><td>@Model.Controller</td></tr>
        <tr><th>Action:</th><td>@Model.Action</td></tr>
        @foreach (string key in Model.Data.Keys)
        {
            <tr><th>@key :</th><td>@Model.Data[key]</td></tr>
        }
    </table>
    <a href="/Admin">
        This is going to another controller
    </a>
    <br />
    <a asp-controller="Customer" asp-action="Index" asp-route-page="789">This is an outgoing URL</a>
    <br />
    <a asp-controller="Home" asp-action="Index" asp-route-page="789">
        This is the second URL
    </a>
    <br />
    <a asp-route="out">This is the third URL</a>
    <br />
    <p>URL: @Url.Action("CustomVariable", "Home", new { id = 100 })</p>
    <br />
    <a asp-route-legacyurl="/articles/Windows_3.1_Overview.html"
       class="btn btn-primary">
        This is the fourth URL
    </a>
    <p>
        URL: @Url.Action(null, null,
   new { legacyurl = "/articles/Windows_3.1_Overview.html" })
    </p>
</body>
</html>